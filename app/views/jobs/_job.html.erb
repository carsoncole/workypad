<div id="<%= dom_id job %> options" data-controller="visibility" class='card w-full max-h-max md:w-96' data-sortable-update-url="<%= job_path(job) %>">
  <div class="flex justify-between">

    <div class="w-8 bg-gray-500 text-white font-bold flex items-center justify-center">
      <div class="-rotate-90 uppercase">
        <%= job.status.humanize %>
      </div>
    </div>

    <div class="p-7 w-full">
      <%= render 'header', job: job %>

      <div data-visibility-target="hideable" class='h-36 hidden'>
        <div class="flex flex-col">
          <%= link_to new_job_note_path(job), class: 'align-middle', id: "edit_job_#{job.id}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" class="-ml-1 w-10 h-10" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9z"/></svg>
          <% end %>
          <% if job.applied_at.present? %>
            <div class="text-sm badge max-w-max  align-middle mb-1">
              Applied:
              <%= job.applied_at.strftime('%D') %>
            </div>
          <% end %>
          <% if job.archived_at.present? %>
            <div class="text-sm badge max-w-max  align-middle mb-1">
              Archived:
              <%= job.archived_at.strftime('%D') %>
            </div>
          <% end %>
        </div>

        <div class='mt-3 flex justify-between'>
          <div class="flex gap-1">
            <% if action_name != "show" %>
              <%= link_to "Notes", job_notes_path(job), class: "button", data: { turbo_frame: "_top" } %>
              <% if action_name == 'index' %>
                <%= link_to "More", job, class: "button", data: { turbo_frame: "_top" } %>
              <% end %>

              <%- if job.url.present? %>
                <%= link_to job.url, target: '_blank', class: "button" do %>
                      <div class='inline-block'>Listing</div>
                      <div class='inline-block'>
                        <svg fill="none" stroke="currentColor" stroke-width="1.5" class="w-3 h-3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"/></svg>
                      </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <%= render 'actions', job: job %>
        </div>

      </div>

    </div>
  </div>
</div>
