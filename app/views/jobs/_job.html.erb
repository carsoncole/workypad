<div id="<%= dom_id job %>" class='card w-full md:w-96' data-sortable-update-url="<%= job_path(job) %>">
  <div class="flex justify-between">
    <div class="p-7 w-full">
      <%= render 'header', job: job %>

      <%= link_to new_job_note_path(job), class: 'inline-block', id: "edit_job_#{job.id}" do %>
        <svg fill="none" stroke="currentColor" stroke-width="1.5" class="w-10 h-10" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/></svg>
      <% end %>

      <div class='mt-3 flex justify-between'>
        <div class="flex gap-1">
          <% if action_name != "show" %>
            <%= link_to "Notes", job_notes_path(job), class: "button" %>
            <% if action_name == 'index' %>
              <%= link_to "More", job, class: "button" %>
            <% end %>

            <%- if job.url.present? %>
              <%= link_to job.url, target: '_blank', class: "button" do %>
                    <div class='inline-block'>Listing</div>
                    <div class='inline-block'>
                      <svg fill="none" stroke="currentColor" stroke-width="1.5" class="w-3 h-3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"/></svg>
                    </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <%= render 'actions', job: job %>
      </div>
    </div>
    <div class="w-8 border-l bg-gray-800 text-white font-bold flex items-center justify-center">
      <div class="transform rotate-90 uppercase">
        <%= job.status.humanize %>
      </div>
    </div>
  </div>
</div>
