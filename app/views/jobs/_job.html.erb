<div id="<%= dom_id job %> options" data-controller="visibility" class="card <%= action_name == 'show' ? 'w-screen lg:w-3/4 xl:w-1/2' : 'w-max' %> max-h-max" data-sortable-update-url="<%= job_path(job) %>">
  <% if job.is_favorite? %>
    <div class="absolute -mt-4 -ml-3">
      <svg xmlns="http://www.w3.org/2000/svg" fill="" viewBox="0 0 24 24" stroke-width="1.5" stroke="none" class="fill-yellow-300 w-9 h-9">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
      </svg>
    </div>
  <% end %>

  <div class="flex justify-between">

    <div class="<%= action_name == 'show' ? 'w-12 text-2xl' : 'w-8' %> text-white <%= job.card_status_color?  %> font-bold flex items-center justify-center">
      <div class="-rotate-90 uppercase" id="<%= dom_id(job) %>_status">
        <%= job.status.humanize %>
      </div>
    </div>

    <div class="w-full">
      <div>
        <%= render 'reminders/show_due', job: job %>
      </div>
      <div class="px-7 py-4">
        <%= link_to job, data: { turbo_frame: '_top' } do %>
          <%= render 'header', job: job %>
        <% end %>

        <div data-visibility-target="hideable" class=" <%= action_name == 'show' ? nil : 'hidden' %>">
          <%= render 'details',  job: job %>

        </div>

      </div>
      <div>
        <%= render 'reminders/show_not_due', job: job %>
      </div>
    </div>
  </div>
</div>
