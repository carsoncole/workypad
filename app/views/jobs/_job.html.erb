<div id="<%= dom_id job %> options" data-controller="visibility" class="w-max card max-h-max <%= action_name == 'show' ? '' : '' %>" data-sortable-update-url="<%= job_path(job) %>">
  <div class="flex justify-between">

    <div class="<%= action_name == 'show' ? 'w-12 text-2xl' : 'w-8' %> text-white <%= job.card_status_color?  %> font-bold flex items-center justify-center">
      <div class="-rotate-90 uppercase" id="<%= dom_id(job) %>_status">
        <%= job.status.humanize %>
      </div>
    </div>

    <div class="w-full">
      <div>
        <%= render 'reminders/show_due', job: job %>
      </div>
      <div class="px-7 py-4">
        <%= link_to job, data: { turbo_frame: '_top' } do %>
          <%= render 'header', job: job %>
        <% end %>

        <div data-visibility-target="hideable" class=" <%= action_name == 'show' ? nil : 'hidden' %>">
          <%= render 'details',  job: job %>

        </div>

      </div>
      <div>
        <%= render 'reminders/show_not_due', job: job %>
      </div>
    </div>
  </div>
</div>
