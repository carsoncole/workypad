 <% if @user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-6 py-3 font-medium rounded-lg mt-3 mb-3">
      <h2 class='text-lg mb-3 font-bold'><%= pluralize(@user.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li>- <%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class=''>
  <div class="my-5">
    <%= form.label :email, class: "font-bold dark:text-white" %>
    <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"  %>
  </div>

  <div class="my-5">
    <%= form.label :password, class: "font-bold dark:text-white" %>
    <%= form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"  %>
  </div>
</div>
