<% if feedback.persisted? %>
  <div id="<%= dom_id feedback %>" class="mb-6 border-b pb-5 lg:pb-0 lg:border-none">
    <div class="md:flex items-center">
      <%= link_to feedback, id: "destroy-#{feedback.id}", method: :delete, data: { "turbo-method": :delete, "turbo-confirm": 'Are you sure?'  } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" class="w-6 h-6 mr-2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/></svg>
      <% end %>

      <p class="w-32 font-bold uppercase">
        <%= feedback.status %>
      </p>
      <p class="w-32 font-medim uppercase mb-3 lg:mb-0">
        <%= feedback.created_at.strftime("%b-%d-%y") %>
      </p>
      <div class="flex-1">
        <div class="bg-gray-100 py-1 px-3 mb-2">
          <%= feedback.content %>
        </div>
        <% if feedback.response.present? %>
          <div class="bg-gray-100 py-1 px-3">
            <div class="font-medium inline-block">
              Response:
            </div>
            <%= feedback.response %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
