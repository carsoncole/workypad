<div class="container lg:w-2/3">


  <h1 class="text-4xl dark:text-white font-medium mt-5 mb-14">
    Feedback
  </h1>


  <div class="mb-12">
    <h2 class="text-xl font-bold mb-2 dark:text-white">
      New feedback
    </h2>
    <div class="w-full">
      <%= render "form", feedback: @new_feedback %>
    </div>
  </div>

  <hr class="my-8" />

  <div class="w-full">
    <h2 class="text-xl font-bold mb-6 dark:text-white">
      Feedback you've submitted
    </div>

    <%- if @feedbacks.all.empty? %>
      <p>No feedback submitted yet.</p>
    <% end %>

    <div id="feedbacks" class="min-w-full">
      <%= render @feedbacks %>
    </div>
  </div>
</div>


